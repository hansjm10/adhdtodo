{
  "name": "adhdtodo",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\" --ignore-path .gitignore",
    "typecheck": "tsc --noEmit",
    "check-all": "npm run lint:check && npm run format:check && npm run typecheck",
    "fix-all": "npm run lint && npm run format",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "maestro test tests/e2e/flows",
    "test:e2e:ios": "maestro test tests/e2e/flows --platform ios",
    "test:e2e:android": "maestro test tests/e2e/flows --platform android",
    "test:e2e:basic": "maestro test tests/e2e/flows/basic-launch.yaml",
    "test:e2e:studio": "maestro studio",
    "test:e2e:record": "maestro record tests/e2e/flows",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@react-native-async-storage/async-storage": "^2.1.2",
    "@react-native-community/datetimepicker": "8.3.0",
    "@shopify/flash-list": "1.7.6",
    "expo": "~53.0.9",
    "expo-crypto": "~14.1.4",
    "expo-haptics": "^14.1.4",
    "expo-linking": "^7.1.5",
    "expo-local-authentication": "~16.0.4",
    "expo-router": "~5.0.7",
    "expo-secure-store": "^14.2.3",
    "expo-status-bar": "~2.2.3",
    "react": "19.0.0",
    "react-native": "0.79.2",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@react-native-community/eslint-config": "^3.2.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.2.0",
    "@tsconfig/react-native": "^3.0.5",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.6",
    "@types/react-native": "^0.73.0",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "eslint": "^9.28.0",
    "eslint-config-expo": "^9.2.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-native": "^5.0.0",
    "expo-modules-core": "^2.3.13",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-expo": "~53.0.5",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "react-test-renderer": "19.0.0",
    "typescript": "^5.8.3"
  },
  "private": true
}
